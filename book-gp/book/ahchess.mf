def monkey_outline =
    numeric q;
    q = round 1/12em;

    x1 = 6*q;
    x2 = 4*q = w - x16;
    x3 = 5*q = w - x15;
    x4 = 2*q = w - x14;
    x5 = 2*q = w - x13;
    x6 = 1*q = w - x12;
    x7 = 1*q = w - x11;
    x8 = 2*q = w - x10;
    x9 = 6*q;
    x17 = 6*q;
    x18 = 6*q;
    x19 = 6*q;
    x20 = 5*q = w - x21;
    x22 = 5*q = w - x23;
    x24 = 4*q = w - x25;

    y1 = 1*q;
    y2 = 3*q = y16;
    y3 = 5*q = y15;
    y4 = 5*q = y14;
    y5 = 7*q = y13;
    y6 = 8.5*q = y12;
    y7 = 10*q = y11;
    y8 = 9*q = y10;
    y9 = 11*q;
    y17 = 2.5*q;
    y18 = 6*q;
    y19 = 9*q;
    y20 = 3*q = y21;
    y22 = 7*q = y23;
    y24 = 8*q = y25;

    path p;
    p = z1{-1,1} .. z2{up}
        & z2{-1,1} .. z4 .. z5 .. z6 .. z7{right} .. z8{down}
        & z8{up} .. z9{right} .. z10{down}
        & z10{up} .. z11{right} .. z12 .. z13 .. z14 .. z16{-1,-1}
        & z16{down} .. z1{-1,-1}
