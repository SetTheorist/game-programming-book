%%%%%%%%%%%%%%%%%%%% FIRZAN %%%%%%%%%%%%%%%%%%%%
def firzan_outline =
    numeric q;
    q = round 1/12em;

    x1 = 1*q = w - x13;
    x2 = 1*q = w - x12;
    x3 = 3*q = w - x11;
    x4 = 4*q = w - x10;
    x5 = 2*q = w - x9;
    x6 = 5*q = w - x8;
    x7 = 6*q;

    x14 = 6*q;
    x15 = 4.5*q = w - x18;
    x16 = 4.5*q = w - x17;

    y1 = 1*q = y13;
    y2 = 2*q = y12;
    y3 = 3*q = y11;
    y4 = 6*q = y10;
    y5 = 9*q = y9;
    y6 = 10*q = y8;
    y7 = 11*q;

    y14 = 6*q;
    y15 = 4.5*q = y18;
    y16 = 7.5*q = y17;

    path p;
    p = z1 -- z2 -- z3 .. z4{up} .. z5 .. z6{right}
        -- z7
        -- z8{right} .. z9 .. z10{down} .. z11
        -- z12 -- z13 -- cycle;
    path px;
    px = z15 -- (1/2[z14, 1/2[z15,z16]])
        -- z16 -- (1/2[z14, 1/2[z16,z17]])
        -- z17 -- (1/2[z14, 1/2[z17,z18]])
        -- z18 -- (1/2[z14, 1/2[z18,z15]])
        -- cycle;

    pickup pencircle xscaled 0.03w yscaled 0.03w;% rotated 30;
    penlabels(range 1 thru 18);
enddef;
beginchar(24, 1em#, 1em#, 0); "Firzan - mask";
    firzan_outline;
    fill p;
endchar;
beginchar(25, 1em#, 1em#, 0); "Firzan - white";
    firzan_outline;
    draw p;
    fill px;
    cullit;
    undrawdot z14;
    cullit;
endchar;
beginchar(26, 1em#, 1em#, 0); "Firzan - black";
    firzan_outline;
    fill p;
    cullit;
    unfill px;
    cullit;
    drawdot z14;
    draw p;
endchar;

