%%%%%%%%%%%%%%%%%%%% OLIPHANT %%%%%%%%%%%%%%%%%%%%
def oliphant_outline =
    numeric q;
    q = round 1/12em;

    x1 = 5.5*q = w - x13;
    x2 = 5*q = w - x12;
    x3 = 4.5*q = w - x11;
    x4 = 3.5*q = w - x10;
    x5 = 4*q = w - x9;
    x6 = 4.5*q = w - x8;
    x7 = 6*q;
    x14 = 4.5*q = w - x15;
    x16 = 4*q = w - x19;
    x17 = 1*q = w - x20;
    x18 = 2.5*q = w - x21;
    x22 = 3*q = w - x24;
    x23 = 4*q = w - x25;

    y1 = 1*q = y13;
    y2 = 4.5*q = y12;
    y3 = 5.5*q = y11;
    y4 = 8*q = y10;
    y5 = 10*q = y9;
    y6 = 10.5*q = y8;
    y7 = 11*q;
    y14 = 8.5*q = y15;
    y16 = 5*q = y19;
    y17 = 8*q = y20;
    y18 = 11*q = y21;
    y22 = 2.5*q = y24;
    y23 = 1*q = y25;

    path p;
    p = z1{up} .. z2 .. z3 .. z4 .. z5 .. z6 .. z7{right}
        .. z8 .. z9 .. z10 .. z11 .. z12 .. z13{down}
        -- cycle;
    path pel, per;
    pel = z16{-1,1} .. z17{up} .. z18{right} .. z6;
    per = z19{1,1} .. z20{up} .. z21{left} .. z8;
    path ptl, ptr;
    ptl = z3 .. z16 .. z22{down} .. z23{1,-1} & z23{-1,1} .. z2;
    ptr = z11 .. z19 .. z24{down} .. z25{-1,-1} & z25{1,1} .. z12;

    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 25);
enddef;
beginchar(18, 1em#, 1em#, 0); "Oliphant - mask";
    oliphant_outline;
    fill p;
    fill ptl & z2 -- cycle;
    fill reverse (ptr & z12 -- cycle);
    fill pel & z6 -- z5 -- z4 -- z3 -- cycle;
    fill per & z8 -- z9 -- z10 -- z11 -- cycle;
endchar;
beginchar(19, 1em#, 1em#, 0); "Oliphant - white";
    oliphant_outline;
    draw p;
    draw pel;
    draw per;
    draw ptl;
    draw ptr;
    pickup pencircle xscaled 0.08w yscaled 0.08w;
    drawdot z14;
    drawdot z15;
    pickup pencircle xscaled 0.03w yscaled 0.03w;
endchar;

%%%%%%%%%%%%%%%%%%%% KING %%%%%%%%%%%%%%%%%%%%
def king_outline =
    numeric q;
    q = round 1/12em;

    x1 = 3*q = w - x16;
    x2 = 3*q = w - x15;
    x3 = 3*q = w - x14;
    x4 = 1*q = w - x13;
    x5 = 2.5*q = w - x12;
    x6 = 4.5*q = w - x11;
    x7 = x8 = x9 = x10 = 6*q;
    x17 = x19 = 6*q;
    x18 = 5*q = w - x20;

    y1 = 1.5*q = y16;
    y2 = 2.5*q = y15;
    y3 = 3.5*q = y14;
    y4 = 8*q = y13;
    y5 = 9*q = y12;
    y6 = 8*q = y11;
    y7 = 4*q;
    y8 = 3*q;
    y9 = 2*q;
    y10 = 1*q;
    y18 = y20 = 10*q;
    y17 = 9*q;
    y19 = 11*q;

    path p;
    p = z1 -- z2 -- z3
        & z3 .. z4{up} .. z5{right} .. z6{1,-1} .. z7{down}
        & z7{up} .. z11{1,1} .. z12{right} .. z13{down} .. z14
        & z14 -- z15 -- z16
        & z16 .. z10{left} .. z1
        & cycle;
    path ph;
    ph = z6 .. z17{right} .. z11 -- z7 -- cycle;
    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 20);
enddef;
beginchar(21, 1em#, 1em#, 0); "King - mask";
    king_outline;
    fill p;
    fill ph;
endchar;
beginchar(22, 1em#, 1em#, 0); "King - white";
    king_outline;
    draw p;
    draw z6 .. z17{right} .. z11;
    draw z1 .. z9{right} .. z16;
    draw z2 .. z8{right} .. z15;
    draw z3 .. z7{right} .. z14;
    draw z18 -- z20; draw z17 -- z19;
endchar;

%%%%%%%%%%%%%%%%%%%% CLERIC %%%%%%%%%%%%%%%%%%%%
def cleric_outline =
    numeric q;
    q = round 1/12em;

    x1 = 1*q = w - x12;
    x2 = 1*q = w - x11;
    x3 = 6*q;
    x4 = 3*q = w - x10;
    x5 = 4*q = w - x9;
    x6 = 3*q = w - x8;
    x7 = 6*q;
    x13 = 6*q;
    x14 = 6*q;
    x15 = 6*q;
    x16 = 6*q;
    x17 = 5*q;
    x18 = 6*q;
    x19 = 7*q;

    y1 = 1*q = y12;
    y2 = 2*q = y11;
    y3 = 2.5*q;
    y4 = 3.5*q = y10;
    y5 = 5*q = y9;
    y6 = 7*q = y8;
    y7 = 10*q;
    y13 = 1.5*q;
    y14 = 4.25*q;
    y15 = 5.5*q;
    y16 = 6.5*q;
    y17 = 7.5*q;
    y18 = 8.5*q;
    y19 = 7.5*q;

    z7.u = z7 + ( 0.0*q,+1.0*q);
    z7.l = z7 + (-0.5*q,+0.5*q);
    z7.r = z7 + (+0.5*q,+0.5*q);

    path p;
    p = z1 -- z2 & z2{1,1} .. z3{1,1}
        & z3{left} .. z4{-1,1}
        & z4 -- z5
        & z5 .. z6{up} .. z7{1,1}
        & z7{1,-1} .. z8{down} .. z9
        & z9 -- z10
        & z10{-1,-1} .. z3{left}
        & z3{1,-1} .. z11{1,-1}
        & z11 -- z12
        & z12{-1,1} .. z13{-1,1}
        & z13{-1,-1} .. z1{-1,-1}
        & cycle;

    path po;
    po = z7{left} .. z7.l{up} .. z7.u{right} .. z7.r{down} .. cycle;

    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 19);
enddef;
beginchar(24, 1em#, 1em#, 0); "Cleric - mask";
    cleric_outline;
    fill p;
    fill po;
endchar;
beginchar(25, 1em#, 1em#, 0); "Cleric - white";
    cleric_outline;
    draw p;
    draw po;
    draw z4 .. z14{right} .. z10;
    draw z5 .. z15{right} .. z9;
    draw z16 -- z18;
    draw z17 -- z19;
endchar;

