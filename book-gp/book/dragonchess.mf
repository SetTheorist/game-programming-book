%%%%%%%%%%%%%%%%%%%% DRAGON %%%%%%%%%%%%%%%%%%%%
def dragon_outline = 
    numeric q;
    q = round 1/12em;

    x1 = 4*q = w - x12;
    x2 = 1*q = w - x11;
    x3 = 4*q = w - x10;
    x4 = 5*q = w - x9;
    x18 = 5*q = w - x13;

    x5 = 4.5*q = w - x14;
    x6 = 6*q;
    x7 = 7*q = w - x16;
    x8 = 5.5*q = w - x17;
    x15 = 6*q;
 
    y1 = 1*q = y12;
    y2 = 6*q = y11;
    y3 = 11*q = y10;
    y4 = 7*q = y9;
    y18 = 5*q = y13;

    y5 = 9*q = y7 = y8;
    y6 = 10.5*q;
    y14 = 3*q = y16 = y17;
    y15 = 1.5*q;

    path p;
    p = reverse (z1{-1,1} .. z2{up} .. {1,1}z3{-1,-1}
        .. {right}z4{up} .. z5{up} .. z6{right} .. {down}z7{up} .. z8{down} .. {down}z9{right}
        .. {-1,1}z10{1,-1} .. z11{down} .. {-1,-1}z12{1,1}
        .. {left}z13{down} .. z14{down} .. z15{left} .. {up}z16{down} .. z17{up} .. {up}z18{left}
        .. {1,-1}cycle);

    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 18);
