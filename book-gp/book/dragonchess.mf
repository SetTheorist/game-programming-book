%%%%%%%%%%%%%%%%%%%% SYLPH %%%%%%%%%%%%%%%%%%%%
def sylph_outline = 
    numeric q;
    q = round 1/12em;

    x1 = 3*q = w - x18;
    x2 = 3*q = w - x17;
    x3 = 5*q = w - x16;
    x4 = 1*q = w - x15;
    x5 = 5*q = w - x14;
    x6 = 5*q = w - x13;
    x7 = 2*q = w - x12;
    x8 = 5*q = w - x11;
    x9 = 4*q = w - x10;
 
    y1 = 1*q = y18;
    y2 = 2*q = y17;
    y3 = 4*q = y16;
    y4 = 7*q = y15;
    y5 = 6*q = y14;
    y6 = 7*q = y13;
    y7 = 10*q = y12;
    y8 = 9*q = y11;
    y9 = 11*q = y10;
 
    path p;
    p = reverse (z1 -- z2{right}
        .. {up}z3{left} .. {up}z4{down} .. {right}z5{up}
        .. {up}z6{left} .. {up}z7{down} .. {right}z8{up}
        .. {left}z9 -- z10{left}
        .. {down}z11{right} .. {up}z12{down} .. {left}z13{down}
        .. {down}z14{right} .. {up}z15{down}.. {left}z16{down}
        .. {right}z17 -- z18 -- cycle);

    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 18);
enddef;
beginchar(0, 1em#, 1em#, 0); "Sylph - mask";
    sylph_outline;
    fill p;
endchar;
beginchar(1, 1em#, 1em#, 0); "Sylph - white";
    sylph_outline;
    draw p;
    draw z2 -- z17;
endchar;

%%%%%%%%%%%%%%%%%%%% PALADIN %%%%%%%%%%%%%%%%%%%%
def paladin_outline = 
    numeric q;
    q = round 1/12em;

    x1 = x3 = 6*q;
    x2 = 2*q = w - x4;
 
    y1 = 1*q;
    y2 = 9*q = y4;
    y3 = 11*q;
 
    path p;
    p = z1{-1,1} .. {up}z2{1,1} .. z3{right} .. {1,-1}z4{down} .. {-1,-1}cycle;

    x5 = 5.5*q = w - x16;
    x6 = 5.5*q = w - x15;
    x7 = 4*q = w - x14;
    x8 = 4*q = w - x13;
    x9 = 5.5*q = w - x12;
    x10 = 5.5*q = w - x11;

    y5 = 3.5*q = y16;
    y6 = 7.0*q = y15;
    y7 = 7.0*q = y14;
    y8 = 8.0*q = y13;
    y9 = 8.0*q = y12;
    y10 = 9.5*q = y11;

    path px;
    px = z5 -- z6 -- z7 -- z8 -- z9 -- z10
        -- z11 -- z12 -- z13 -- z14 -- z15 -- z16
        -- cycle;

    pickup pencircle xscaled 0.03w yscaled 0.03w;
    penlabels(range 1 thru 16);
enddef;
beginchar(3, 1em#, 1em#, 0); "Paladin - mask";
    paladin_outline;
    fill p;
endchar;
beginchar(4, 1em#, 1em#, 0); "Paladin - white";
    paladin_outline;
    draw p;
    %draw px;
    fill px;
endchar;

